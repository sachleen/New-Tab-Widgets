$(function () {
    setTitle('notes', 'Notes');
    showWatermark('notes');
    
    $.get(getWidgetUrl("notes","notes.html"), function(data) {
        setContent('notes', data);
        $("#notes_notes").html(get('notes', 'notes', ''));
        
        $("#notes_notes").keyup(function() {
            set('notes', 'notes', $("#notes_notes").html());
        });
    });
});
